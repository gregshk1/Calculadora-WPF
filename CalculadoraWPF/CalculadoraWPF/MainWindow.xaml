<Window x:Class="CalculadoraWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculadora" Height="350" Width="300">
    <Grid>
        <TextBox x:Name="txtNumero1" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBox x:Name="txtNumero2" HorizontalAlignment="Left" Margin="140,20,0,0" VerticalAlignment="Top" Width="100"/>
        <Button Content="+" HorizontalAlignment="Left" Margin="20,60,0,0" VerticalAlignment="Top" Width="50" Click="btnSomar_Click"/>
        <Button Content="-" HorizontalAlignment="Left" Margin="80,60,0,0" VerticalAlignment="Top" Width="50" Click="btnSubtrair_Click"/>
        <Button Content="*" HorizontalAlignment="Left" Margin="140,60,0,0" VerticalAlignment="Top" Width="50" Click="btnMultiplicar_Click"/>
        <Button Content="/" HorizontalAlignment="Left" Margin="200,60,0,0" VerticalAlignment="Top" Width="50" Click="btnDividir_Click"/>
        <Label x:Name="lblResultado" Content="Resultado:" HorizontalAlignment="Left" Margin="20,120,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="Limpar" HorizontalAlignment="Left" Margin="20,160,0,0" VerticalAlignment="Top" Width="100" Click="btnLimpar_Click"/>
    </Grid>
</Window>
